<div class="row edgeapps-list" style="margin-top: -25px;">

    {% for devicekey,deviceinfo in storage_devices %}

        <div class="edgeapp on col-lg-4 mb-lg-0 mb-2" id="storage-1">
            <div class="card">
                <div class="card-body p-3">
                <div class="row">
                    <div class="col-12 col-lg-12">
                        <div class="d-flex flex-column h-100">
                            <div class="status">
                                <p class="mb-1 pt-2 text-bold">
                                    {% if deviceinfo.main_device %}
                                        Internal storage
                                    {% else %}
                                        {{deviceinfo.name}}
                                    {% endif %}
                                </p>
                            </div>

                            <h5 class="font-weight-bolder">{{deviceinfo.size}}</h5>
                            {% if deviceinfo.status.description == 'healthy' %}
                                <p><span class="badge badge-sm bg-gradient-success">{{deviceinfo.status.description}}</span></p>
                            {% elseif deviceinfo.status.description == 'locked' %}
                                <p><span class="badge badge-sm bg-gradient-default">{{deviceinfo.status.description}}</span></p>
                            {% elseif deviceinfo.status.description == 'disconnected' %}
                                <p><span class="badge badge-sm bg-gradient-danger">{{deviceinfo.status.description}}</span></p>
                            {% else %}
                                <p><span class="badge badge-sm bg-gradient-warning">{{deviceinfo.status.description}}</span></p>
                            {% endif %}

                            <div class="progress-wrapper">
                                <div class="progress-info">
                                    <div class="progress-percentage">
                                    <span class="text-sm font-weight-bold"><b>50% occupied / Using 250GB</b></span>
                                    </div>
                                </div>
                                <div class="progress" style="height: 35px;">
                                    <div class="progress-bar bg-gradient-dark" role="progressbar" aria-valuenow="8" aria-valuemin="0" aria-valuemax="8" style="width: 8%;">OS</div>
                                    <div class="progress-bar bg-gradient-primary" role="progressbar" aria-valuenow="30" aria-valuemin="8" aria-valuemax="30" style="width: 38%;">EdgeApps</div>
                                    <div class="progress-bar bg-gradient-info" role="progressbar" aria-valuenow="50" aria-valuemin="38" aria-valuemax="50" style="width: 12%;">Buckets</div>
                                    <div class="progress-bar bg-gradient-secondary" role="progressbar" aria-valuenow="100" aria-valuemin="50" aria-valuemax="100" style="width: 50%;">Free Space</div>

                                </div>
                            </div>

                            <div class="action-btns">
                                <br>
                                <a href="/edgeapps/disable_online/storage-1" class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto">Backup this drive<i class="fas fa-refresh text-sm ms-1" aria-hidden="true"></i></a><br>
                                <a href="/edgeapps/stop/storage-1" class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto">Safely remove <i class="fas fa-stop text-sm ms-1" aria-hidden="true"></i></a><br>

                            </div>

                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>

    {% endfor %}

</div>