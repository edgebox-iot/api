<div class="card h-100">
            <div class="card-header pb-0">
              <h6>Actions overview</h6>
              {% if actions %}
                <p class="text-sm">
                  <i class="fa fa-arrow-up text-success" aria-hidden="true"></i>
                  <span class="font-weight-bold">{{ actions|length }}</span> recent action{% if actions|length > 1 %}s{% endif %}
                </p>
              {% endif %}
            </div>
            <div class="card-body p-3">
              {% if not actions %}
                <div class="py-3 text-center actions-overview-empty">
                  <i class="ni ni-bullet-list-67 ni-3x"></i>
                  <h4 class="mt-4">No activity yet</h4>
                  <p>Actions and tasks across your Edgebox will be appear here</p>
                </div>
              {% else %}
                <div class="timeline timeline-one-side">
                  {% for action_key,action_info in actions %}
                    {# <pre>{{ dump(action_info) }}</pre> #}
                    <div class="timeline-block mb-3">
                      <span class="timeline-step">
                        <i class="ni ni-{{ action_info.icon }} text-{{ action_info.icon_color_class }} text-gradient"></i>
                      </span>
                      <div class="timeline-content">
                        <h6 class="text-dark text-sm font-weight-bold mb-0">{{ action_info.description }}</h6>
                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">{{ action_info.last_update }}</p>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>