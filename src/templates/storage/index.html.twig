                <div class="row" style="margin-top: -25px;">
                    <div class="col-md-12">
                        <div class="row edgeapps-list" style="margin-top: -25px;">

                            {% for appkey,appinfo in apps_list %}

                                <div class="edgeapp on col-lg-4 mb-lg-0 mb-2" id="storage-1">
                                    <div class="card">
                                        <div class="card-body p-3">
                                        <div class="row">
                                            <div class="col-12 col-lg-12">
                                                <div class="d-flex flex-column h-100">
                                                    <div class="status">
                                                        <p class="mb-1 pt-2 text-bold">
                                                            Paulo's Bucket
                                                        </p>
                                                    </div>

                                                    <h5 class="font-weight-bolder">Using 12GB</h5>
                                                    <p><span class="badge badge-sm bg-gradient-success">Available</span></p>
                                                    <div class="progress-wrapper">
