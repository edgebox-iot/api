                {{ include('partials/_row_title_block.html.twig', {main_title: 'Your Storage Devices', button_title: 'Add Device', button_link: '/storage/device/new', new_tab: false}) }}
                <div class="row" style="margin-top: -25px;">
                    <div class="col-md-12">
                        {{ include('partials/_row_storage_devices_list.html.twig', {storage_devices: storage_devices}) }}
                    </div>
                </div>
            </div>
